CREATE OR REPLACE MODEL `flowing-gasket-454406-k2.cleaned_dataset.xgboost_model`
OPTIONS (
  MODEL_TYPE = 'BOOSTED_TREE_CLASSIFIER',
  INPUT_LABEL_COLS = ['label'],
  MAX_ITERATIONS = 100,
  MAX_TREE_DEPTH = 6,
  LEARN_RATE = 0.1,
  L2_REG = 1,  -- Add regularization
  L1_REG = 1
) AS
SELECT
  label,
  Sentiment_Polarity,
  Review_Length,
  Repetition_Score,
  ML.TF_IDF(ML.NGRAMS(SPLIT(text_, ' '), [1,3])) OVER() AS tfidf_features
FROM
   `flowing-gasket-454406-k2.cleaned_dataset.clean_data_table`
WHERE
  label IS NOT NULL;

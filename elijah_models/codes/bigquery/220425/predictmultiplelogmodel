WITH predictions AS (
  SELECT
    label,
    predicted_label
  FROM
    ML.PREDICT(
      MODEL `flowing-gasket-454406-k2.cleaned_dataset.v2log_model`,
      (
        SELECT
          label,
          ML.TF_IDF(ML.NGRAMS(SPLIT(text_, ' '), [1,3])) OVER() AS tfidf_features
        FROM
          `flowing-gasket-454406-k2.cleaned_dataset.clean_data_table`
        WHERE
          label IS NOT NULL AND text_ IS NOT NULL
      )
    )
)
SELECT
  COUNTIF(label = predicted_label) AS correct_predictions,
  COUNT(*) AS total_predictions,
  ROUND(COUNTIF(label = predicted_label) / COUNT(*), 4) AS accuracy
FROM
  predictions;
